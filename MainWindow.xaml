<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:UI="clr-namespace:IoTControl.UI"
    x:Class="IoTControl.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="{StaticResource BacgroundColor}">
    <Grid>
        <DockPanel>
            <UI:CardHolder Height="70" DockPanel.Dock="Top">
                <Grid>
                    <Button x:Name="tb_gear" Style="{StaticResource ImageButton_Tool}" 
                        ToolTip="Синхронизация с базой" VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                        <Image Source="/Sources/Icons/icons8-gear.png"/>
                    </Button>
                </Grid>
            </UI:CardHolder>
            <UI:CardHolder Width="150" DockPanel.Dock="Left">
                <ScrollViewer>
                    <TextBlock x:Name="tb_log" TextWrapping="Wrap" Text=""/>
                </ScrollViewer>
            </UI:CardHolder>
            <Grid DockPanel.Dock="Right">
                
            </Grid>
        </DockPanel>
        
    </Grid>
</Window>
